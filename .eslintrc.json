{
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prettier/prettier": ["error", { "singleQuote": true }],

    "linebreak-style": 0,
    "no-use-before-define": 0,
    "no-plusplus": 0,
    "quotes": ["error", "single"]
  }
}
